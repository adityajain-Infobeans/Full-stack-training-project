<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Communications Application - Login</title>
  </head>

  <body class="container mt-5">
    <h4 class="mt-3 text-center">Login</h4>

    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <form class="" onsubmit="formSubmit(event)">
          <div class="mb-3">
            <label for="loginEmail" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="loginEmail"
              aria-describedby="emailHelp"
            />
          </div>
          <div class="mb-3">
            <label for="loginPassword" class="form-label">Password</label>
            <input type="password" class="form-control" id="loginPassword" />
          </div>
          <div class="text-center">
            <button
              type="submit"
              class="btn btn-primary ps-5 pe-5 rounded-pill"
            >
              Login
            </button>
          </div>
        </form>
        <div class="text-center mt-5 fw-bold d-none" id="loginStatus"></div>
      </div>
      <div class="col-3"></div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous"
  ></script>
  <script>
    let formSubmit = (e) => {
      e.preventDefault();
      const email = document.getElementById("loginEmail").value;
      const password = document.getElementById("loginPassword").value;

      if (email && password) {
        //send API request
        $.ajax({
          url: "/api/userLogin",
          type: "POST",
          data: {
            username: email,
            password: password,
          },
          success: function (result) {
            let dataResult = JSON.parse(result);

            $("#loginStatus")
              .removeClass("d-none")
              .html(
                '<div class="alert alert-success" role="alert"> ' +
                  dataResult.status +
                  "</div>"
              );

            localStorage.setItem("projectUserToken", dataResult.data._id);
            localStorage.setItem("projectUserFullName", dataResult.data.name);
            localStorage.setItem("projectUserEmail", dataResult.data.email);

            window.location.href = "/dashboard";
          },
          error: function (data, status, error) {
            $("#loginStatus")
              .removeClass("d-none")
              .html(
                '<div class="alert alert-danger" role="alert"> ' +
                  JSON.parse(data.responseText).error +
                  "</div>"
              );
          },
        });
      }
    };
  </script>
</html>
